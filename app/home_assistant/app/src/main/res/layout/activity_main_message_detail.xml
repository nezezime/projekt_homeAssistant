<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <View
        android:id="@+id/main_message_detail_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_div_center"
        />

    <TextView
        android:id="@+id/main_message_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="30sp"

        android:layout_above="@id/main_message_datetime"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/main_message_datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="20sp"

        android:layout_above="@id/main_div_center"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp" />


    <!--
    lezi na sredini zaslona, omogoca delitev ekrana na pol po relative layoutu
    -->
    <View
        android:id="@id/main_div_center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:background="@android:color/black"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/main_message_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/main_div_center"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        />



</RelativeLayout>